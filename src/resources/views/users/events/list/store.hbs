<link rel="stylesheet" href="/css/store_trash.css">
<div class="container">
    <div class="mt-4">
        <div class="header">
            <h3>Sự kiện của tôi</h3>
            <a href="/users/trash/events">Thùng rác ({{deletedCount}})</a>
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sự kiện</th>
                    <th scope="col">Thời gian</th>
                    <th scope="col" colspan="2">Thời gian tạo</th>
                </tr>
            </thead>
            <tbody>
                {{#each events}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.title}}</td>
                    <td>
                        <div>
                            Start: <span class="date">convert({{this.eventStartDate}})</span>
                        </div>
                        <div>
                            End: <span class="date">convert({{this.eventEndDate}})</span>
                        </div>
                    </td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="/events/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
                            data-target="#delete-event-modal">Xóa</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có sự kiện nào.
                        <a href="/events/create">Tạo sự kiện</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Confirm delete event --}}
    <div id="delete-event-modal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa sự kiện?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa sự kiện này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button id="btn-delete-event" type="button" class="btn btn-danger">Xóa bỏ</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete hidden form --}}
    <form name="delete-event-form" method="POST"></form>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/datetime_handling.js"></script>
    <script>
        $(document).ready(function () {
            var eventId;
            var deleteForm = document.forms['delete-event-form'];
            var btnDeleteEvent = document.getElementById('btn-delete-event');


            // When dialog confirm clicked
            $('#delete-event-modal').on('show.bs.modal', function (event) {

                var button = $(event.relatedTarget);
                eventId = button.data('id');
                console.log(eventId)
            });

            // When delete event btn clicked
            btnDeleteEvent.onclick = function () {
                deleteForm.action = '/events/' + eventId + '?_method=DELETE';
                deleteForm.submit();
            }
        });
    </script>
</div>