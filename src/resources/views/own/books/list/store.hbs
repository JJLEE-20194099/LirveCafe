<link rel="stylesheet" href="/css/store_trash.css">
<div class="container">
    <div class="mt-4">
        <div class="header">
            <h3>Sách của tôi</h3>
            <a href="/own/trash/books">Thùng rác ({{deletedCount}})</a>
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col" colspan="2">Thời gian tạo</th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.title}}</td>
                    <td>
                      {{this.price}}
                    </td>
                    <td class="date">{{this.createdAt}}</td>
                    <td>
                        <a href="/books/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
                            data-target="#delete-book-modal">Xóa</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có sách nào.
                        <a href="/books/create">Tạo sách</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Confirm delete book --}}
    <div id="delete-book-modal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa book?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa cuốn sách này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button id="btn-delete-book" type="button" class="btn btn-danger">Xóa bỏ</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete hidden form --}}
    <form name="delete-book-form" method="POST"></form>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/datetime_handling.js"></script>
    <script>
        $(document).ready(function () {
            var bookId;
            var deleteForm = document.forms['delete-book-form'];
            var btnDeleteBook = document.getElementById('btn-delete-book');


            // When dialog confirm clicked
            $('#delete-book-modal').on('show.bs.modal', function (book) {

                var button = $(book.relatedTarget);
                bookId = button.data('id');
                console.log(bookId)
            });

            // When delete book btn clicked
            btnDeleteBook.onclick = function () {
                deleteForm.action = '/books/' + bookId + '?_method=DELETE';
                deleteForm.submit();
            }
        });
    </script>
</div>