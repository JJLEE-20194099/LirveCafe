<link rel="stylesheet" href="/css/store_trash.css">
<link rel="stylesheet" href="/css/load_more.css">
<div class="container">
    <div class="mt-4">
        <div class="header">
            <h3>Các đợt giảm giá</h3>
            <span><a href="/news/create" style="font-size: 16px; font-weight: 500;">Tạo đợt giảm giá</a></span>
            
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Thời gian xảy ra</th>
                    <th scope="col" colspan="2">Thời gian tạo</th>
                </tr>
            </thead>
            <tbody>
                {{#each news}}
                <tr class="item-for-loadmore">
                    <th scope="row">{{sum @index 1}}</th>
                    <td>Giảm {{this.discountPercentage}} cho các sản phẩm trên {{this.condition}}K</td>
                    <td>
                        {{this.eventStartDate}} {{eventStartTime}} - {{this.eventEndDate}} {{eventEndTime}}
                    </td>
                    <td class="date">{{this.createdAt}}</td>
                    <td class="btn-group">
                        <button type="button" class="btn btn-outline-success" data-toggle="modal"
                            data-target="#{{this._id}}">Xem</button>
                        <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content py-md-5 px-md-4 p-sm-3 p-4" style="background-color: white;">
                                    <div class="item-info">

                                        <div>
                                            <div style="margin-bottom: 24px;">
                                                {{#ifCond this.applicableObject 0}}
                                                <h5>Giảm giá lên tới <span>{{this.discountPercentage}}%</span> cho
                                                    toàn
                                                    bộ sách có giá trị trên {{this.condition}}.000 VNĐ</h5>
                                                {{/ifCond}}

                                                {{#ifCond this.applicableObject 1}}
                                                <h5>Giảm giá lên tới <span>{{this.discountPercentage}}%</span> cho
                                                    toàn
                                                    bộ loại nước uống có giá trị trên {{this.condition}}.000 VNĐ
                                                </h5>
                                                {{/ifCond}}

                                                {{#ifCond this.applicableObject 2}}
                                                <h5>Giảm giá lên tới <span>{{this.discountPercentage}}%</span> cho
                                                    toàn
                                                    bộ đồ ăn có giá trị trên {{this.condition}}.000 VNĐ</h5>
                                                {{/ifCond}}
                                            </div>
                                            <div>
                                                <div>
                                                    <div>
                                                        <ul style="list-style-type: circle">
                                                            <li>
                                                                <p style="font-size: 16px; font-weight: 500;">Ngày bắt đầu đợt giảm giá:
                                                                    <span style="font-size: 16px; color: #c39e51; font-weight: bold">{{this.eventStartDate}}
                                                                        {{this.eventStartTime}}</span></p>
                                                            </li>
                                                            <li>
                                                                <p style="font-size: 16px; font-weight: 500;">Ngày kết thúc đợt giảm giá:
                                                                    <span style="font-size: 16px; color: #c39e51; font-weight: bold">{{this.eventEndDate}}
                                                                        {{this.eventEndTime}}</span></p>
                                                            </li>
                                                            <li>
                                                                <p style="font-size: 16px; font-weight: 500;">Số sản phẩm lấy từ kho để cung cấp cho đợt giảm giá: 
                                                                    <span style="font-size: 16px; color: #c39e51; font-weight: bold">{{this.sum_items_during_saleoff}}</span></p>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div>


                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <img src="{{this.image}}" alt="" style="height: 442px">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="/news/{{this._id}}/edit" class="btn btn-outline-primary">Sửa</a>
                        <button href="" class="btn btn-outline-warning" data-toggle="modal" data-id="{{this._id}}"
                            data-target="#delete-book-modal">Xóa</button>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có đợt giám giá nào.
                        <a href="/news/create">Tạo sự kiện giảm giá</a>
                    </td>
                </tr>
                {{/each}}



            </tbody>

        </table>
    </div>

    <a href="#" id="loadMore">Load More</a>

    <p class="totop btn btn-danger">
        <a href="#top" id="top" style="color: #fff">Back to top</a>
    </p>

    {{!-- Confirm delete book --}}
    <div id="delete-book-modal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa đợt giảm giá này?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa đợt giảm giá này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button id="btn-delete-book" type="button" class="btn btn-danger">Xóa bỏ</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete hidden form --}}
    <form name="delete-book-form" method="POST"></form>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/datetime_handling.js"></script>
    <script>



        $(document).ready(function () {
            var bookId;
            var deleteForm = document.forms['delete-book-form'];
            var btnDeleteBook = document.getElementById('btn-delete-book');


            // When dialog confirm clicked
            $('#delete-book-modal').on('show.bs.modal', function (book) {

                var button = $(book.relatedTarget);
                bookId = button.data('id');
                console.log(bookId)
            });

            // When delete book btn clicked
            btnDeleteBook.onclick = function () {
                deleteForm.action = '/news/' + bookId + '?_method=DELETE';
                deleteForm.submit();
            }

            $(".item-for-loadmore").slice(0, 4).show();
            $("#loadMore").on('click', function (e) {
                e.preventDefault();
                $(".item-for-loadmore:hidden").slice(0, 4).slideDown();
                if ($(".item-for-loadmore:hidden").length == 0) {
                    $("#load").fadeOut('slow');
                }
                $('html,body').animate({
                    scrollTop: $(this).offset().top
                }, 1500);
            });

            $('#top').click(function () {
                $('body,html').animate({
                    scrollTop: 0
                }, 600);
                return false;
            });


        });

        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
                $('.totop a').fadeIn();
            } else {
                $('.totop a').fadeOut();
            }
        });
    </script>
</div>