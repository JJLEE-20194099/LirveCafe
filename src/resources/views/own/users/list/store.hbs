<link rel="stylesheet" href="/css/khang_user_management_base.css">
<link rel="stylesheet" href="/css/khang_user_management_main.css">
<div class="admin__users">
  <div class="mt-4">
    <div>
      <h3>Danh sách users trong hệ thống ({{users.length}})</h3>
      <a href="/own/trash/users">Thùng rác ({{deletedCount}})</a>
    </div>

    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Mô tả</th>
          <th scope="col" colspan="2">Thời gian tạo</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr class="users-item">
          <th scope="row">{{sum @index 1}}</th>
          <td>
            <div class="users__profile">
              <img src="{{this.avatar}}" alt="" class="users__profile-img" style="margin-right: 8px;">
              <div class="users__profile-des" style="margin-right: 8px; min-width:200px">
                <div class="users__profile-name">{{this.username}}</div>
                <!-- add class users-status--active for online -->
                <!-- add class users-status--offline for offline -->
                <div class="users__profile-status users-status--offline">
                  <i class="fas fa-circle users-status__icon"></i>
                  <span class="status--offline">Offline</span>
                  <span class="status--online">Online</span>
                </div>
              </div>
            </div>
          </td>
          <td>
            <div class="users-item__des" style="margin-right: 8px;">
              <div class="users-item__des-email">{{this.email}}</div>
              Role:
              <span class="users__des-role">{{this.role}}</span>
            </div>
          </td>
          <td><span class="date">{{this.createdAt}}</span></td>
          <td>
            <a href="/users/{{this.slug}}/edit" class="btn btn-link">Sửa</a>
            <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
              data-target="#delete-user-modal">Xóa</a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">
            Bạn chưa bất cứ 1 cuốn sách nào
            <a href="/users/create">Thêm mới sách</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{!-- Confirm delete user --}}
  <div id="delete-user-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Xóa sách?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Bạn chắc chắn muốn xóa sách này?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
          <button id="btn-delete-user" type="button" class="btn btn-danger">Xóa bỏ</button>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-user-form" method="POST"></form>

<script src="../../../../../support_lib/datetime_handling.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var userId;
    var deleteForm = document.forms['delete-user-form'];
    var btnDeleteuser = document.getElementById('btn-delete-user');
    // When dialog confirm clicked
    $('#delete-user-modal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      console.log(button)
      userId = button.data('id');
    });

    // When delete user btn clicked
    btnDeleteuser.onclick = function () {
      deleteForm.action = '/users/' + userId + '?_method=DELETE';
      deleteForm.submit();
    }
  });
</script>