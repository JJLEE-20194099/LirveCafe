<link rel="stylesheet" href="/css/store_trash.css">
<div class="container">
    <div class="mt-4">
        <div class="header">
            <h3>Người dùng của tôi</h3>
            <a href="/own/trash/users">Thùng rác ({{deletedCount}})</a>
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Role</th>
                    <th scope="col" colspan="2">Thời gian tạo</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.username}}</td>
                    <td>
                      {{this.role}}
                    </td>
                    <td class="date">{{this.createdAt}}</td>
                    <td>
                        <a href="/users/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
                            data-target="#delete-users-modal">Xóa</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có người dùng nào.
                        <a href="/users/create">Tạo người dùng</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Confirm delete users --}}
    <div id="delete-users-modal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa người dùng?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa cuốn người dùng này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button id="btn-delete-users" type="button" class="btn btn-danger">Xóa bỏ</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete hidden form --}}
    <form name="delete-users-form" method="POST"></form>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/datetime_handling.js"></script>
    <script>
        $(document).ready(function () {
            var usersId;
            var deleteForm = document.forms['delete-users-form'];
            var btnDeleteusers = document.getElementById('btn-delete-users');


            // When dialog confirm clicked
            $('#delete-users-modal').on('show.bs.modal', function (users) {

                var button = $(users.relatedTarget);
                usersId = button.data('id');
                console.log(usersId)
            });

            // When delete users btn clicked
            btnDeleteusers.onclick = function () {
                deleteForm.action = '/users/' + usersId + '?_method=DELETE';
                deleteForm.submit();
            }
        });
    </script>
</div>