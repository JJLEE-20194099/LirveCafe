<div class="mt-4">
    <h3>Thêm mới coffee</h3>

    <form method="POST" action="/coffee/save" enctype='multipart/form-data'>
        <div class="form-group">
            <label for="name">Tên coffee</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
         <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="videoId">Image</label>
            <input type="file" class="form-control" id="videoId" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Thêm mới coffee</button>
    </form>
</div>