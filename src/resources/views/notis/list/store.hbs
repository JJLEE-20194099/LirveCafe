<link rel="stylesheet" href="/css/store_trash.css">
<div class="container">
    <div class="mt-4">
        <div class="header">
            <h3>Thông báo của tôi</h3>
            <a href="/own/trash/notis">Thùng rác ({{deletedCount}})</a>
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"> Nội dung </th>
                    <th scope="col" colspan="2">Thời gian</th>
                    <th scope="col" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each notis}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>
                        <div class="noti"
                            >
                          

                            <div class="noti-main">
                                <div class="noti-content">
                                    <a href="{{this.where_url}}" style="color: black">
                                        <span class="noti-username" style="color: black">{{this.sender}}</span>
                                        <span class="noti-type" style="color: black">đã nhắc đến bạn </span> <a
                                            href="{{this.where_url}}" class="noti-where"
                                            style="color: black">tại đây</a>
                                    </a>
                                </div>
                                <div class="noti-time date">
                                   {{this.createdAt}}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="date">{{this.createdAt}}</td>
                    <td>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
                            data-target="#delete-noti-modal">Xóa</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có thông báo nào.
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Confirm delete noti --}}
    <div id="delete-noti-modal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa thông báo?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa thông báo này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button id="btn-delete-noti" type="button" class="btn btn-danger">Xóa bỏ</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete hidden form --}}
    <form name="delete-noti-form" method="POST"></form>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/datetime_handling.js"></script>
    <script>
        $(document).ready(function () {
            var notiId;
            var deleteForm = document.forms['delete-noti-form'];
            var btnDeletenoti = document.getElementById('btn-delete-noti');


            // When dialog confirm clicked
            $('#delete-noti-modal').on('show.bs.modal', function (noti) {

                var button = $(noti.relatedTarget);
                notiId = button.data('id');
                console.log(notiId)
            });

            // When delete noti btn clicked
            btnDeletenoti.onclick = function () {
                deleteForm.action = '/notis/' + notiId + '?_method=DELETE';
                deleteForm.submit();
            }
        });
    </script>
</div>